package doamin;

public class Baseball {

	private String name;
	private double winrate;
	private double obc;

	public Baseball() {

	}

	public Baseball(String name, double winrate, double obc) {
		this.name = name;
		this.winrate = winrate;
		this.obc = obc;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getWinrate() {
		return winrate;
	}

	public void setWinrate(double winrate) {
		if (winrate > 0) {
			this.winrate = winrate;
		}
		else {
			System.out.println("승률 값 다시 봐");	
		}
	}
	
	public double getObc() {
		return obc;
	}

	public void setObc(double obc) {
		if (obc > 0) {
			this.obc = obc;
		}
		else {
			System.out.println("출루율 값 다시 봐");	
		}
	}
	public String toString() {
		return "구단명 " +name + "  승률 " + winrate +" 출루율  "+ obc;
	}
	
}



package model;

import doamin.Baseball;

public class BaseballModel {

	private static Baseball[] allData = new Baseball[20];
	private static int index;

	static {
		allData[0] = new Baseball("두산", 0.598, 0.356);
		allData[1] = new Baseball("키움", 0.580, 0.353);
		allData[2] = new Baseball("LG", 0.571, 0.330);
		allData[3] = new Baseball("NC", 0.500, 0.347);
		allData[4] = new Baseball("KT", 0.477, 0.344);
		allData[5] = new Baseball("삼성", 0.417, 0.340);
		allData[6] = new Baseball("KIA", 0.412, 0.340);
		allData[7]=  new Baseball("한화", 0.381, 0.3243); 
		allData[8]=  new Baseball("롯데", 0.3731, 0.335);
		index = 6 ;
	}

	public static boolean insert(Baseball v) {
		if (index < 20) {
			allData[index++] = v;
			return true;
		} else {
			return false;
		}
	}

	public static boolean delete(String name) {
		Baseball v = null;
		for (int i = 0; i < allData.length; i++) {
			v = allData[i];
			if (v != null && v.getName().equals(name)) {
				allData[i] = null;
				return true;
			}
		}

		return false;
	}

	public static Baseball winrateChange(String name, double change) {
		Baseball v = null;
		for (int i = 0; i < allData.length; i++) {
			v = allData[i];
			if (v != null && v.getName().equals(name)) {
				allData[i].setWinrate(change);
				return allData[i];
			}
		}
		return null;
	}

	public static Baseball obcChange(String name, double change) {
		Baseball v = null;
		for (int i = 0; i < allData.length; i++) {
			v = allData[i];
			if (v != null && v.getName().equals(name)) {
				allData[i].setObc(change);
				return allData[i];
			}
		}
		return null;
	}

	public static Baseball[] getAll() {
		return allData;

	}

	public static Baseball getBaseball(String name) {
		Baseball v = null;
		for (int i = 0; i < allData.length; i++) {
			v = allData[i];
			if (v != null && v.getName().equals(name)) {
				return allData[i];
			}
		}
		return null;
	}

}



package controller;

import doamin.Baseball;
import model.BaseballModel;
import view.EndView;

public class BaseballController {

	public static void request(int reqNumber) {
		if (reqNumber == 1) {
			EndView.printAll(BaseballModel.getAll());

		} else if (reqNumber == 2) {
			EndView.printOne("키움");
			EndView.printOne("LG");
			EndView.printOne("KT");

		}else if(reqNumber ==3) {
			boolean r = BaseballModel.insert(new Baseball("두산", 0.598, 0.356));
			if(r) {
				EndView.printSuccess("팀 추가 성공");
			}else{
				EndView.printFail("팀 추가 실패");
			}
			
		}else if(reqNumber ==4) {
			BaseballModel.delete("두산");
			EndView.printDelete("팀 삭제 완료");
		}else if(reqNumber ==5) {
			EndView.printObc("롯데", 0.3243);
			EndView.printObc("NC", 0.330);
		}else if(reqNumber ==6) {
			EndView.printWinrate("롯데", 0.381);
			EndView.printWinrate("NC", 0.571);
		}else {
			EndView.printFail("요청하신 정보는 서비스 할 수 없습니다.");
		
		}
	
}
}



package view;

import controller.BaseballController;

public class StartView {

	public static void main(String[] args) {
		
		System.out.println("---모두검색 후 팀 추가----");
		BaseballController.request(1);
		BaseballController.request(3);
		System.out.println("---모두검색 후 팀 삭제----");
		BaseballController.request(1);
		BaseballController.request(4);
		System.out.println("---팀 롯데,NC 출루율 수정----");
		BaseballController.request(5);
		System.out.println("---팀 롯데, NC 승률 수정----");
		BaseballController.request(6);
		System.out.println("---팀 키움, LG, KT 검색----");
		BaseballController.request(2);
		
    
    
package view;

import doamin.Baseball;
import model.BaseballModel;

public class EndView {
		
	public static void printAll(Baseball[] all) {
		for(Baseball v : all) {
			if(v!=null) {
				System.out.println(v.toString());
			}
		}
	}
	
	public static void printOne(String name) {
		Baseball v = BaseballModel.getBaseball(name);
		if( v != null) {
			System.out.println(v);
		}
		else {
			System.out.println("검색결과 없음");
		}
		
	}
	public static void printWinrate(String name, double winrate) {
		Baseball v = BaseballModel.winrateChange( name, winrate);
		if(v != null) {
			System.out.println(v);
		}
		else
		{			
			System.out.println("수정 불가");
		}
	}
	
		public static void printObc(String name, double obc) {
			Baseball v = BaseballModel.obcChange(name, obc);
			if(v != null) {
				System.out.println(v);
			}
			else
			{			
				System.out.println("수정 불가");
			}	
		
	}
	public static void printDelete(String msg) {
		System.out.println(msg);
			
	}	
			
	public static void printSuccess(String msg) {
		System.out.println(msg);
		
	}
	public static void printFail(String msg) {
		System.out.println(msg);		
	}
	
}


